<h1>Write a review for <%= @review.pizza.name %> pizza:</h1>

<%= render partial: 'layouts/errors', locals: {object: @review} %>

<%= form_with model: [@pizza, @review] do |f| %>
    <%= f.hidden_field :pizza_id %>
    <%= f.label :stars, "Stars from 1-5" %>
    <%= f.number_field :stars, min: 0, max: 5 %>
    <br>
    <br>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <br>
    <br>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <br>
    <br>
    <%= f.submit 'Create Review' %>
<% end %>
<br>
<%= link_to 'All Reviews For This Pizza', pizza_reviews_path(@pizza) %> 