<h1>Sign Up Here:</h1>

<%= form_with model: @user, url: '/signup' do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <br>
    <br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <br>
    <br>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <br>
    <%= f.submit 'Sign Up' %>
<% end %>

<h2>Or Login with Google:</h2>

<%= button_to 'Google', '/auth/google_oauth2' %>