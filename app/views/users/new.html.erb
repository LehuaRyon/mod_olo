<h1>Sign Up Here:</h1>

<%= flash[:deleted_account] %>

<%= render partial: 'layouts/errors', locals: {object: @user} %>

<%= form_with model: @user, url: signup_path do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <br>
    <br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <br>
    <br>
    <%= render partial: 'form', locals: {user: f, button_name: "Sign Up"} %>
<% end %>

<h2>Or Log In with Google:</h2>
<%= button_to 'Google', '/auth/google_oauth2' %>