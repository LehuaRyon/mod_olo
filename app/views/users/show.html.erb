<h1>Welcome <%= @user.first_name %> <%= @user.last_name %>!</h1>

<% if current_user.id == @user.id %>
    <%= link_to 'Edit Credentials', edit_user_path(@user) %> |
    <%= link_to 'Delete Account', user_path(@user), method: :delete %>
    <br>
    <h2>All Your Orders:</h2>
    <ol>
        <% @orders.each do |order| %>
        <li>
            Ordered at: <%= order.created_at.strftime('%l:%M %P, %B %d, %Y') %>
            <br>
            Pickup Name: <%= link_to order.pickup_name, order_path(order) %> |
            <% if current_user == order.user %>
                <%= link_to 'Edit Order', edit_order_path(order) %> |
                <%= link_to 'Delete Order', order_path(order), method: :delete %>
            <% end %>
            <br>
            Pizza: <%= link_to order.pizza.name, pizza_path(order.pizza) %>
            <br>
            Purchaser: <%= order.user.first_name %> <%= order.user.last_name %>
            <br>
            <br>
        </li>
        <% end %>
    </ol>
    <h2>All Your Reviews:</h2>  
    <ol>
    <% @reviews.each do |review| %>
        <li><%= review.reviewer.first_name %> <%= review.reviewer.last_name %> gave the <%= review.pizza.name %> pizza a <strong><%= review.stars %>/5</strong> star rating - "<%= link_to review.content, pizza_review_path(review.pizza, review) %>"</li>
        <br>
    <% end %>
    </ol>
<% end %>