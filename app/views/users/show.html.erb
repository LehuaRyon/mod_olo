<h1>Welcome <%= @user.first_name %> <%= @user.last_name %>!</h1>

<%= flash[:cannot_change_user] %>
<%= flash[:user_edited] %>
<br>
<% if current_user.id == @user.id %>
    <%= link_to 'Edit Credentials', edit_user_path(@user), class: 'button is-warning' %> 
    <%= link_to 'Delete Account', user_path(@user), method: :delete, class: 'button is-danger'%>
    <br>
    <h2>All Your Orders:</h2>
    <%= render partial: 'orders/iteration' %>
    <h2>All Your Reviews:</h2>  
    <%= render partial: 'reviews/iteration' %>
<% end %>