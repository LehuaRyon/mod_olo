<h1>All Pizzas:</h1>

<%= flash[:pizza_not_found] %>

<%= form_with url: pizzas_path, method: :get do |form| %>
  <%= form.label :search, "Search by pizza name:" %>
  <%= form.text_field :search %>
  <%= form.submit "Search" %>
<% end %>

<ol>
    <% @pizzas.each do |pizza| %>
    <li class='card has-text-white'>
        <%= link_to pizza.name, pizza_path(pizza), class: 'button is-info is-small'%> <%= pizza.ingredients %>
        <br>
        <%= link_to 'Order This Pizza Now', new_pizza_order_path(pizza), class: 'button is-success is-small' %>
        <%= link_to 'Review This Pizza Now', new_pizza_review_path(pizza), class: 'button is-info is-small' %>
      
    </li>
    <% end %>
</ol>