<h1>All Pizzas:</h1>

<%= form_with url: pizzas_path, method: :get do |form| %>
  <%= form.label :search, "Search by pizza name:" %>
  <%= form.text_field :search %>
  <%= form.submit "Search" %>
<% end %>

<ol>
    <% @pizzas.each do |pizza| %>
    <li>
        <%= pizza.size %>
        <%= link_to pizza.name, pizza_path(pizza) %> |
        <% #if current_user == pizza.order.user %>
            <%= link_to 'Edit Pizza', edit_pizza_path(pizza) %> |
            <%= link_to 'Delete Pizza', pizza_path(pizza), method: :delete %>
        <% #end %>
        <br>
        <%= pizza.ingredients %>
        <br>
        <br>
    </li>
    <% end %>
</ol>