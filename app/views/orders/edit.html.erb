<h1>Edit Order!</h1>

<% if @order.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@order.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
      <% @order.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @order do |f| %>
    <%= f.label :pickup_name %>
    <%= f.text_field :pickup_name %>
    <br>
    <br>
    <%= f.label :special_instructions %>
    <%= f.text_field :special_instructions %>
    <br>
    <br>
    <%= f.label :pizza_id, "Select a pizza:"%>
    <%= f.collection_select :pizza_id, Pizza.all, :id, :name, prompt: true %>
    <br>
    <br>
    <%= f.submit 'Submit Edit' %>
<% end %>