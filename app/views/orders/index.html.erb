<h1>All Orders:</h1>

<%= form_with url: orders_path, method: :get do |form| %>
  <%= form.label :search, "Search by purchaser's last name:" %>
  <%= form.text_field :search %>
  <%= form.submit "Search" %>
<% end %>

<ol>
    <% @orders.each do |order| %>
    <li>
        Ordered at: <%= order.created_at.strftime('%l:%M %P, %B %d %Y') %>
        <br>
        Pickup Name: <%= link_to order.pickup_name, order_path(order) %> |
        <% if current_user == order.user %>
            <%= link_to 'Edit Order', edit_order_path(order) %> |
            <%= link_to 'Delete Order', order_path(order), method: :delete %>
        <% end %>
        <br>
        Pizza: <%= order.pizza.name %>
        <br>
        Purchaser: <%= order.user.first_name %> <%= order.user.last_name %>
        <br>
        <br>
    </li>
    <% end %>
</ol>